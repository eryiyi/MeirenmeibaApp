<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>
    <com.lbins.myapp.widget.ReboundScrollView android:layout_width="match_parent"
                                              android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="15dp"
                          android:paddingTop="15dp"
                          android:layout_marginTop="3dp"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="修改密码"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="15dp"
                          android:paddingTop="15dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_pwr_one"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_weight="1"
                              android:padding="8dp"
                              android:layout_gravity="center|left"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="登录密码"
                              android:layout_marginLeft="15dp"
                              android:textSize="18sp"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:layout_weight="1"
                              android:textColor="@color/text_color"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="建议您定期更改密码以保障账户安全"
                              android:textSize="14sp"
                              android:layout_marginTop="5dp"
                              android:layout_marginLeft="15dp"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:textColor="@color/text_color_two"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="15dp"
                          android:paddingTop="15dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_pwr_two"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_weight="1"
                              android:padding="8dp"
                              android:layout_gravity="center|left"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="手机验证"
                              android:layout_marginLeft="15dp"
                              android:textSize="18sp"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:layout_weight="1"
                              android:textColor="@color/text_color"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="若您的验证手机已丢失或停用，请立即修改更换"
                              android:textSize="14sp"
                              android:layout_marginTop="5dp"
                              android:layout_marginLeft="15dp"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:textColor="@color/text_color_two"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="15dp"
                          android:paddingTop="15dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_pwr_three"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_weight="1"
                              android:padding="8dp"
                              android:layout_gravity="center|left"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="支付密码"
                              android:layout_marginLeft="15dp"
                              android:textSize="18sp"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:layout_weight="1"
                              android:textColor="@color/text_color"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="使用账户资产、美人美吧支付等服务时 用于验证支付"
                              android:textSize="14sp"
                              android:layout_marginTop="5dp"
                              android:layout_marginLeft="15dp"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:textColor="@color/text_color_two"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.lbins.myapp.widget.ReboundScrollView>

</LinearLayout>