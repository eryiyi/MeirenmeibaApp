<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/zhuye_item_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:drawableLeft="@drawable/order_tx"
              android:padding="5dp"
              android:drawablePadding="8dp"
              android:textSize="14sp"
              android:id="@+id/item_nickname"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/item_nickname"
              android:id="@+id/item_moren"
              android:text="[默认]"
              android:padding="5dp"
              android:layout_marginLeft="5dp"
              android:textColor="@color/red"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/item_tel"
              android:padding="5dp"
              android:drawablePadding="8dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_toRightOf="@+id/item_moren"
              android:drawableLeft="@drawable/order_tel"
              android:textSize="14sp"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/address_select"
               android:id="@+id/item_in"
               android:padding="5dp"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:textColor="@color/text_color"
              android:id="@+id/item_address"
              android:padding="5dp"
              android:textSize="14sp"
              android:layout_below="@+id/item_nickname"
              android:layout_height="wrap_content"/>

</RelativeLayout>