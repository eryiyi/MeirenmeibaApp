<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="8dp"
              android:background="@drawable/btn_white_shape"
              android:layout_width="wrap_content"
              android:layout_height="205dp">

    <ImageView
            android:id="@+id/cover"
            android:scaleType="centerCrop"
            android:src="@drawable/tuijian_one"
            android:layout_width="wrap_content"
            android:layout_height="120dp"/>


    <TextView android:layout_width="wrap_content"
              android:textColor="@color/red"
              android:textSize="16sp"
              android:text="$120.00"
              android:singleLine="true"
              android:layout_marginTop="3dp"
              android:layout_marginLeft="8dp"
              android:layout_below="@+id/cover"
              android:id="@+id/money_one"
              android:layout_height="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/red"
              android:textSize="13sp"
              android:singleLine="true"
              android:layout_marginTop="5dp"
              android:text="包邮"
              android:layout_toRightOf="@+id/money_one"
              android:layout_below="@+id/cover"
              android:layout_marginLeft="8dp"
              android:id="@+id/icon_baoyou"
              android:layout_height="20dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="韩俊熙家泡菜韩俊熙家泡菜韩俊熙家泡菜韩俊熙家泡菜韩俊熙家泡菜"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:layout_below="@+id/money_one"
              android:textColor="@color/text_color"
              android:textSize="13sp"
              android:id="@+id/name"
              android:layout_height="35dp"/>
</RelativeLayout>