<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>


    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:visibility="gone"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="50dp">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="充值"
                  android:id="@+id/btn_one"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textColor="@color/red"
                  android:layout_height="50dp"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="提现"
                  android:id="@+id/btn_two"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textColor="@color/text_color"
                  android:layout_height="50dp"/>
    </LinearLayout>


    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:text="剩余积分："
                  android:padding="15dp"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="666.00"
                  android:padding="15dp"
                  android:id="@+id/money_count"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="分"
                  android:padding="15dp"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/liner_card"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:text="选择银行卡"
                  android:padding="15dp"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text=""
                  android:drawableRight="@drawable/in"
                  android:padding="15dp"
                  android:id="@+id/ban_card"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="提现金额："
                  android:padding="15dp"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="wrap_content"
                  android:hint="请输入金额，1分=1元"
                  android:numeric="integer"
                  android:layout_weight="1"
                  android:background="@drawable/et_bule_bg"
                  android:padding="15dp"
                  android:id="@+id/money_cztx"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="元"
                  android:padding="15dp"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:text="手机号:"
                  android:layout_centerVertical="true"
                  android:id="@+id/mobile_msg"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:hint="请输入手机号"
                  android:singleLine="true"
                  android:textSize="15sp"
                  android:gravity="center|left"
                  android:layout_marginRight="80dp"
                  android:layout_marginLeft="8dp"
                  android:id="@+id/mobile"
                  android:background="@null"
                  android:layout_toRightOf="@+id/mobile_msg"
                  android:layout_height="match_parent"/>
        <Button android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:padding="8dp"
                android:id="@+id/btn_card"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:background="@drawable/btn_red_shape"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:padding="8dp"
                  android:layout_gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:text="验证码:"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="match_parent"
                  android:hint="请输入短信验证码"
                  android:layout_marginLeft="8dp"
                  android:id="@+id/card"
                  android:textSize="15sp"
                  android:singleLine="true"
                  android:numeric="integer"
                  android:background="@null"
                  android:layout_toRightOf="@+id/mobile_msg"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <Button android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:onClick="txAction"
            android:text="确定"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_shape"
            android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:padding="8dp"
              android:textSize="14sp"
              android:lineSpacingMultiplier="1.4"
              android:layout_gravity="center_horizontal"
              android:textColor="@color/red"
              android:layout_marginTop="8dp"
              android:text="提示：\n 1、手续费1%，提现金额必须是100的倍数\n 2、提现时间：9:30-5:00  高峰期可能会有延迟！"
              android:layout_height="wrap_content"/>
</LinearLayout>