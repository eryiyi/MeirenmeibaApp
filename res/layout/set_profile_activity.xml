<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>
    <com.lbins.myapp.widget.ReboundScrollView android:layout_width="match_parent"
                                              android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="15dp"
                          android:paddingTop="15dp"
                          android:layout_marginTop="3dp"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="个人资料"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:layout_marginTop="8dp"
                          android:id="@+id/liner_set_profile_cover"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="头像"
                          android:layout_marginLeft="8dp"
                          android:textSize="16sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <com.lbins.myapp.widget.CircleImageView
                        android:src="@drawable/ic_launcher"
                        android:layout_width="60dp"
                        android:id="@+id/mine_cover"
                        android:layout_height="60dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_profile_name"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="账号"
                          android:layout_marginLeft="8dp"
                          android:textSize="16sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/name"
                          android:text="韩登举"
                          android:layout_marginLeft="8dp"
                          android:drawablePadding="15dp"
                          android:layout_marginRight="15dp"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_profile_mobile"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="手机号"
                          android:layout_marginLeft="8dp"
                          android:textSize="16sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/mobile"
                          android:text="131"
                          android:layout_marginLeft="8dp"
                          android:drawablePadding="15dp"
                          android:layout_marginRight="15dp"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                                         android:orientation="horizontal"
                                         android:padding="8dp"
                                         android:layout_marginTop="3dp"
                                         android:id="@+id/liner_set_profile_nick"
                                         android:background="@drawable/btn_white_shape"
                                         android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="昵称"
                      android:layout_marginLeft="8dp"
                      android:textSize="16sp"
                      android:layout_gravity="center"
                      android:gravity="center|left"
                      android:layout_weight="1"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:text="韩登举"
                      android:id="@+id/nick"
                      android:layout_marginLeft="8dp"
                      android:drawablePadding="15dp"
                      android:layout_marginRight="5dp"
                      android:drawableRight="@drawable/in"
                      android:textColor="@color/text_color_two"
                      android:textSize="13sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_profile_sex"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="性别"
                          android:layout_marginLeft="8dp"
                          android:textSize="16sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:text="男"
                          android:id="@+id/sex"
                          android:drawablePadding="15dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/liner_set_profile_birth"
                          android:background="@drawable/btn_white_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="出生日期"
                          android:layout_marginLeft="8dp"
                          android:textSize="16sp"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/birth"
                          android:text="年 月 日"
                          android:drawablePadding="15dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color_two"
                          android:textSize="13sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.lbins.myapp.widget.ReboundScrollView>

</LinearLayout>