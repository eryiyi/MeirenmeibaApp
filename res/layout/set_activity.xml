<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_set_profile"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="个人资料"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="5dp"
                  android:drawableRight="@drawable/in"
                  android:textColor="@color/text_color_two"
                  android:textSize="13sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_set_pwr"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="修改密码"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="5dp"
                  android:drawableRight="@drawable/in"
                  android:textColor="@color/text_color_two"
                  android:textSize="13sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_set_address"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="收货地址"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="5dp"
                  android:drawableRight="@drawable/in"
                  android:textColor="@color/text_color_two"
                  android:textSize="13sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:visibility="gone"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_set_liulan"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="浏览设置"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="5dp"
                  android:drawableRight="@drawable/in"
                  android:textColor="@color/text_color_two"
                  android:textSize="13sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_kefu"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="联系客服"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="5dp"
                  android:drawableRight="@drawable/in"
                  android:textColor="@color/text_color_two"
                  android:textSize="13sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_set_version"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="检测新版本"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="5dp"
                  android:drawableRight="@drawable/in"
                  android:textColor="@color/text_color_two"
                  android:textSize="13sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:paddingTop="15dp"
                  android:layout_marginTop="3dp"
                  android:id="@+id/liner_aboutus"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="关于我们"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center|left"
                  android:layout_weight="1"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button android:layout_width="match_parent"
            android:text="退 出"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:onClick="quiteAction"
            android:layout_below="@+id/liner_one"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_red_shape"
            android:layout_height="wrap_content"/>
</LinearLayout>