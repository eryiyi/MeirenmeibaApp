<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>
    <com.lbins.myapp.widget.ReboundScrollView android:layout_width="match_parent"
                                              android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:padding="15dp"
                      android:textStyle="bold"
                      android:id="@+id/count_money"
                      android:textSize="25sp"
                      android:textColor="@color/red"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="12dp"
                          android:background="@color/white"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="45dp"
                           android:layout_marginLeft="15dp"
                           android:src="@drawable/umeng_socialize_wechat"
                           android:layout_height="45dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="微信支付"
                          android:layout_weight="1"
                          android:layout_marginLeft="15dp"
                          android:textSize="18sp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:padding="8dp"
                           android:id="@+id/check_btn_wx"
                           android:src="@drawable/cart_selected"
                           android:layout_gravity="center_vertical"
                           android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="8dp"
                          android:padding="12dp"
                          android:background="@color/white"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="45dp"
                           android:layout_marginLeft="15dp"
                           android:src="@drawable/pay_zfb"
                           android:layout_height="45dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="支付宝支付"
                          android:layout_weight="1"
                          android:layout_marginLeft="15dp"
                          android:textSize="18sp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:padding="8dp"
                           android:id="@+id/check_btn_ali"
                           android:src="@drawable/cart_selectno"
                           android:layout_gravity="center_vertical"
                           android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="8dp"
                          android:padding="12dp"
                          android:background="@color/white"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="45dp"
                           android:layout_marginLeft="15dp"
                           android:src="@drawable/profile_unback"
                           android:layout_height="45dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="零钱支付"
                          android:layout_weight="1"
                          android:layout_marginLeft="15dp"
                          android:textSize="18sp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:padding="8dp"
                           android:id="@+id/check_btn_ling"
                           android:src="@drawable/cart_selectno"
                           android:layout_gravity="center_vertical"
                           android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:onClick="payAction"
                    android:text="去支付"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="35dp"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_red_shape"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.lbins.myapp.widget.ReboundScrollView>
</LinearLayout>