<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="15dp"
              android:background="@drawable/btn_white_shape"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:text="*************8357"
              android:layout_weight="1"
              android:padding="6dp"
              android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:textColor="@color/red"
              android:textStyle="bold"
              android:textSize="16sp"
              android:id="@+id/card"
              android:layout_height="wrap_content"/>

    <ImageView android:layout_width="wrap_content"
               android:padding="3dp"
               android:layout_alignParentRight="true"
               android:id="@+id/btn_select"
               android:visibility="gone"
               android:src="@drawable/button_red_delete"
               android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="中国农业银行"
              android:id="@+id/bank_name"
              android:layout_marginLeft="6dp"
              android:layout_below="@+id/card"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="13181038186"
              android:id="@+id/bank_mobile"
              android:layout_alignParentRight="true"
              android:layout_marginLeft="6dp"
              android:layout_below="@+id/card"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="中国农业银行惠民支行"
              android:id="@+id/bank_kaihu_name"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="6dp"
              android:layout_below="@+id/bank_name"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>

</RelativeLayout>