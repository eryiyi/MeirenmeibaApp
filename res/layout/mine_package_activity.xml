<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>
    <com.lbins.myapp.widget.ReboundScrollView android:layout_width="match_parent"
                                              android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:background="#898989"
                            android:layout_height="220dp">
                <com.lbins.myapp.widget.CircleImageView
                        android:src="@drawable/ic_launcher"
                        android:layout_width="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/cover"
                        android:layout_height="60dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_marginTop="8dp"
                          android:textSize="16sp"
                          android:layout_below="@+id/cover"
                          android:id="@+id/name"
                          android:layout_centerHorizontal="true"
                          android:textColor="@color/black"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_below="@+id/name"
                              android:gravity="center_vertical"
                              android:layout_marginTop="8dp"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:padding="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center|right"
                                    android:layout_height="wrap_content">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/scan_mine"
                                   android:id="@+id/img_one"
                                   android:layout_height="wrap_content"/>
                        <RelativeLayout android:layout_width="wrap_content"
                                        android:padding="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:layout_height="wrap_content">
                            <TextView android:layout_width="wrap_content"
                                      android:text="余额"
                                      android:textStyle="bold"
                                      android:id="@+id/txt_one"
                                      android:textColor="@color/white"
                                      android:textSize="18sp"
                                      android:layout_height="wrap_content"/>
                            <TextView android:layout_width="wrap_content"
                                      android:id="@+id/mine_money"
                                      android:textColor="@color/white"
                                      android:layout_below="@+id/txt_one"
                                      android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView android:layout_width="0dp"
                               android:layout_weight="0.01"
                               android:src="@color/white"
                               android:layout_height="40dp"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:padding="8dp"
                                  android:layout_marginLeft="8dp"
                                  android:gravity="center|left"
                                  android:layout_height="wrap_content">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/scan_mine"
                                   android:id="@+id/img_two"
                                   android:layout_height="wrap_content"/>
                        <RelativeLayout android:layout_width="wrap_content"
                                        android:padding="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:layout_height="wrap_content">
                            <TextView android:layout_width="wrap_content"
                                      android:text="银行卡"
                                      android:textStyle="bold"
                                      android:id="@+id/txt_two"
                                      android:textColor="@color/white"
                                      android:textSize="18sp"
                                      android:layout_height="wrap_content"/>
                            <TextView android:layout_width="wrap_content"
                                      android:id="@+id/mine_bank_card_num_one"
                                      android:textColor="@color/white"
                                      android:layout_below="@+id/txt_two"
                                      android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="12dp"
                          android:layout_marginTop="8dp"
                          android:id="@+id/liner_profile_packget"
                          android:background="@drawable/btn_gray_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="可用美币"
                          android:textSize="18sp"
                          android:textStyle="bold"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:text="0"
                          android:id="@+id/mine_jinbi_num"
                          android:textStyle="bold"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="12dp"
                          android:layout_marginTop="8dp"
                          android:id="@+id/liner_profile_count"
                          android:background="@drawable/btn_gray_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="可用积分"
                          android:textSize="18sp"
                          android:textStyle="bold"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:text="0"
                          android:id="@+id/mine_count_num"
                          android:textStyle="bold"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="12dp"
                          android:layout_marginTop="8dp"
                          android:id="@+id/liner_profile_cztx"
                          android:background="@drawable/btn_gray_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="充值"
                          android:textSize="18sp"
                          android:textStyle="bold"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textStyle="bold"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="12dp"
                          android:layout_marginTop="8dp"
                          android:id="@+id/liner_profile_bank_card"
                          android:background="@drawable/btn_gray_shape"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="绑定解绑银行卡"
                          android:textSize="18sp"
                          android:textStyle="bold"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_weight="1"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:drawablePadding="15dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textStyle="bold"
                          android:id="@+id/mine_bank_card_num_two"
                          android:text="已绑定0张"
                          android:layout_marginRight="5dp"
                          android:drawableRight="@drawable/in"
                          android:textColor="@color/text_color"
                          android:textSize="16sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.lbins.myapp.widget.ReboundScrollView>
</LinearLayout>